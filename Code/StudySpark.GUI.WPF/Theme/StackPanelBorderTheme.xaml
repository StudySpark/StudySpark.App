<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type StackPanel}" x:Key="StackPanelTheme">
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style TargetType="{x:Type Grid}" x:Key="GridTheme">
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style TargetType="{x:Type Border}" x:Key="StackPanelBorderTheme">
        <Setter Property="Background" Value="#BF22212F"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0,0" StartPoint="1,1">
                    <GradientStop Color="#FFCEA204" Offset="1" />
                    <GradientStop Color="#FFEC2F63"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
</ResourceDictionary>