<UserControl x:Class="StudySpark.GUI.WPF.MVVM.View.FilesSolutionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:StudySpark.GUI.WPF.MVVM.ViewModel"
             xmlns:local="clr-namespace:StudySpark.GUI.WPF.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Text="Jouw vijf laatste Visual Studio solutions:"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="30"
            Foreground="White"/>
        
        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Hidden"
            HorizontalScrollBarVisibility="Hidden">

            <ContentControl
                Margin="10"
                Content="{Binding CurrentSLNList}"/>
        </ScrollViewer>
    </Grid>
</UserControl>
