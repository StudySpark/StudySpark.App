                                    <Border Background="#FF353544"
                                            Width="120"
                                            CornerRadius="8">
                                        <TextBlock Text="{Binding FontName}"
                                                   TextAlignment="Center"
                                                   Padding="5"
                                                   Width="125"
                                                   Foreground="#FFFFFF"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.ToolTip>
                                                <ToolTip Content="{Binding FontName}"/>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>


            <Button Grid.Column="0"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Style="{StaticResource HoverableButtonTheme}"
                    Command="{Binding EditorBackCommand}"
                    CommandParameter="{Binding ElementName=rtfEditor}">
                <Border CornerRadius="5"
                        BorderThickness="1"
                        Margin="2"
                        Padding="4"
                        BorderBrush="#0CFFFFFF">
                    <Image Source="/Images/NoteBack.png" />
                </Border>
            </Button>

            <Button Grid.Column="1"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Style="{StaticResource HoverableButtonTheme}"
                    Command="{Binding EditorSaveCommand}"
                    CommandParameter="{Binding ElementName=rtfEditor}">
                <Border CornerRadius="5"
                        BorderThickness="1"
                        Margin="2"
                        Padding="4"
                        BorderBrush="#0CFFFFFF">
                    <Image Source="/Images/NoteSave.png" />
                </Border>
            </Button>

            <Label x:Name="EditorNoteName"
                   Content="{Binding CurrentEditingNote.NoteName}"
                   VerticalAlignment="Center"
                   Foreground="#FFF"
                   Grid.Column="2" />

            <Button Grid.Column="3"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Style="{StaticResource HoverableButtonTheme}"
                    Command="{Binding EditorColorCommand}"
                    CommandParameter="{Binding ElementName=rtfEditor}">
                <Border CornerRadius="5"
                        BorderThickness="1"
                        Margin="2"
                        Padding="4"
                        BorderBrush="#0CFFFFFF">
                    <Image Source="/Images/NoteColor.png" />
                </Border>
            </Button>

            <Button Grid.Column="4"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Style="{StaticResource HoverableButtonTheme}"
                    Command="{Binding ToggleEditorHightlightColorSelectorCommand}"
                    CommandParameter="{Binding ElementName=rtfEditor}">
                <Border CornerRadius="5"
                        BorderThickness="1"
                        Margin="2"
                        Padding="4"
                        BorderBrush="#0CFFFFFF">
                    <Image Source="/Images/NoteHightlight.png" />
                </Border>
            </Button>

            <Button Grid.Column="5"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Style="{StaticResource HoverableButtonTheme}"
                    Command="{Binding EditorFontCommand}"
                    CommandParameter="{Binding ElementName=rtfEditor}">
                <Border CornerRadius="5"
                        BorderThickness="1"
                        Margin="2"
                        Padding="4"
                        BorderBrush="#0CFFFFFF">
                    <Image Source="/Images/NoteFont.png" />
                </Border>
            </Button>

            <Button Grid.Column="6"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Style="{StaticResource HoverableButtonTheme}"
                    Command="{Binding EditorTextSizeMinCommand}"
                    CommandParameter="{Binding ElementName=rtfEditor}">
                <Border CornerRadius="5"
                        BorderThickness="1"
                        Margin="2"
                        Padding="4"
                        BorderBrush="#0CFFFFFF">
                    <Image Source="/Images/NoteTextSizeMin.png" />
                </Border>
            </Button>

            <Label x:Name="EditorTextSize"
                   Content="{Binding TextSize}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="#FFF"
                   FontSize="18"
                   Grid.Column="7" />

            <Button Grid.Column="8"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Style="{StaticResource HoverableButtonTheme}"
                    Command="{Binding EditorTextSizePlusCommand}"
                    CommandParameter="{Binding ElementName=rtfEditor}">
                <Border CornerRadius="5"
                        BorderThickness="1"
                        Margin="2"
                        Padding="4"
                        BorderBrush="#0CFFFFFF">
                    <Image Source="/Images/NoteTextSizePlus.png" />
                </Border>
            </Button>

            <Button Grid.Column="9"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Style="{StaticResource HoverableButtonTheme}"
                    Command="{Binding EditorBulletListCommand}"
                    CommandParameter="{Binding ElementName=rtfEditor}">
                <Border CornerRadius="5"
                        BorderThickness="1"
                        Margin="2"
                        Padding="4"
                        BorderBrush="#0CFFFFFF">
                    <Image Source="/Images/NoteTextList.png" />
                </Border>
            </Button>

            <Button Grid.Column="10"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Style="{StaticResource HoverableButtonTheme}"
                    Command="{Binding EditorImageCommand}"
                    CommandParameter="{Binding ElementName=rtfEditor}">
                <Border CornerRadius="5"
                        BorderThickness="1"
                        Margin="2"
                        Padding="4"
                        BorderBrush="#0CFFFFFF">
                    <Image Source="/Images/NoteImage.png" />
                </Border>
            </Button>
        </Grid>

        <RichTextBox x:Name="rtfEditor"
                     Visibility="Visible"
                     Grid.Row="1"
                     Background="Transparent"
                     Foreground="#FFF"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     CaretBrush="White"
                     SelectionBrush="#FFA042CE"
                     Panel.ZIndex="1"
                     core:RichTextBoxBehavior.SelectionChangedCommand="{Binding rtfEditor_SelectionChangedCommand}"
                     core:RichTextBoxBehavior.CommandParameter="{Binding ElementName=rtfEditor}" />
    </Grid>
</UserControl>
